    <!-- Action -->
    <template src="proxy/images/blank.png">
        <matches>
            <match name="Type" value="Action"/>
        </matches>
        <overlayblocks>
			<conditional>
				<switch property="House">
					<case value="Mars"><link block="mars_action" /></case>
					<case value="Brobnar"><link block="brobnar_action" /></case>
					<case value="Dis"><link block="dis_action" /></case>
					<case value="Sanctum"><link block="sanctum_action" /></case>
					<case value="Logos"><link block="logos_action" /></case>
					<case value="Untamed"><link block="untamed_action" /></case>
					<case value="Shadows"><link block="shadows_action" /></case>
				</switch>
			</conditional>   
        </overlayblocks>
        
        <textblocks>            
            <link block="action_name">
                <property name="Name"/>
            </link>
            <link block="action_text">
                <property name="Text"/>
            </link>
            <link block="action_type">
                <property name="Type"/>
            </link>
            <link block="action_traits">
                <property name="Traits"/>
            </link>
        </textblocks>
    </template>
    
